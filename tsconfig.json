{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./packages/ui-components",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./packages/ui-components"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.*"]
}
